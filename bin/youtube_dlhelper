#!/usr/bin/env ruby
$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')
require 'youtube_dlhelper'
NAME = 'youtube_dlhelper'
SCRIPTVER = YoutubeDlhelperVersion::Version::STRING

case ARGV.length
  when 1
    puts 'Launching youtube_dlhelper'
  else
    puts "Script: #{NAME} Version: #{SCRIPTVER}"
    puts 'Copyright (C) 2014 Sascha Manns <Sascha.Manns@directbox.com>'
    puts 'Description: This script can download music from YouTube'
    puts 'converts it to MP3 and places it in your music directory.'
    puts 'License: See LICENSE file'
    puts '************************************************************'
    puts 'Usage:'
    puts "#{NAME} YourURL"
    puts 'Example:'
    puts "#{NAME} http://www.youtube.com/watch?v=aHjpOzsQ9YI"
    abort('Syntax Error: Please check if you have given a URL')
end


exit YoutubeDlhelper.run!(*ARGV)
